<% set_meta_tags title: current_article.title %>
<% wrap_layout :layout do %>
  <article>
    <div class="page-header title">
      <h1><%= link_to current_article.title, current_article.data.url %></h1>
      <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
      <span class="date"><%= current_article.date.strftime("%B #{current_article.date.day.ordinalize}, %Y") %></span>
      <div class="tags">
        <% current_article.tags.each_with_index do |tag, j|%>
          <% link_to '/blog/categories/' + tag do %>
          <button class="btn btn-tag"><%= tag %></button>
          <% end %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </article>
  <%= partial "includes/social" %>
<% end %>
